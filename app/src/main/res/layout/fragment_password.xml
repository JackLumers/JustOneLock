<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PasswordLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/openPasswordButtonLinLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/custom_ripple"
        android:clickable="true">

        <ImageView
            android:id="@+id/grayLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@+id/serviceImage"
            app:srcCompat="@color/gray" />

        <ImageView
            android:id="@+id/serviceImage"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/icon" />

        <Space
            android:id="@+id/space2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/serviceImage" />

        <TextView
            android:id="@+id/serviceNameTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/space2"
            android:gravity="center"
            android:text="Сервис"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/passwordPreviewTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/space2"
            android:gravity="center"
            android:text="логин"
            android:textAlignment="textStart"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/copyLoginImageButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/custom_ripple"
            android:clickable="true"
            app:srcCompat="@drawable/ic_login" />

        <FrameLayout
            android:id="@+id/copyPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/copyLoginImageButton"
            android:background="@drawable/custom_ripple"
            android:clickable="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_key" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            app:srcCompat="@color/gray" />
    </RelativeLayout>

</LinearLayout>
