<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/ic_secure" android:id="@+id/imageView"
            android:layout_marginBottom="55dp"
            android:layout_above="@+id/textView3" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:text="@string/secure" android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="@string/secure_hello_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textAlignment="center"
            android:textColor="@color/black" android:textSize="14sp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"/>
</RelativeLayout>
