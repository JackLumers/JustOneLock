<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="janeelsmur.justonelock.MainActivity">

    <TextView
            android:text="@string/open_existing"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView5"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openExistingButton"
            android:orientation="vertical"
            android:background="@drawable/custom_circle_ripple"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_circle_arrow_down"
                android:id="@+id/arrowDownImageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_open_vault"
                android:id="@+id/openExistingImageView"/>
    </RelativeLayout>


    <TextView
            android:text="@string/create_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_below="@+id/openExistingButton"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/createNewDataBaseButton"
            android:background="@drawable/custom_circle_ripple"
            android:layout_below="@+id/textView6" android:layout_alignStart="@+id/openExistingButton"
            android:layout_marginTop="25dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_add"
                android:id="@+id/plusImageView"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_open_vault"
                android:id="@+id/createNewImageView" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
    </RelativeLayout>

</RelativeLayout>
