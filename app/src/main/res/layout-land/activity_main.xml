<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="janeelsmur.justonelock.MainActivity">

    <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout2" android:layout_weight="1">

            <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/open_existing"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_above="@id/openExistingButton"/>
            <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/openExistingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_circle_ripple"
                    android:orientation="vertical" android:layout_alignParentBottom="true">

                <ImageView
                        android:id="@+id/arrowDownImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="19dp"
                        app:srcCompat="@drawable/ic_circle_arrow_down"/>

                <ImageView
                        android:id="@+id/openExistingImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_open_vault" android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/create_new"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_above="@+id/createNewDataBaseButton" android:layout_centerHorizontal="true"/>
            <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/createNewDataBaseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_circle_ripple"
                    android:orientation="vertical" android:layout_alignParentBottom="true">

                <ImageView
                        android:id="@+id/plusImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="19dp"
                        app:srcCompat="@drawable/ic_add"/>

                <ImageView
                        android:id="@+id/createNewImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        app:srcCompat="@drawable/ic_open_vault"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
