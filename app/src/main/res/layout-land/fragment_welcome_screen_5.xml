<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/information"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textView12"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/create_tip"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_alignParentStart="true"/>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_plus"
                android:id="@+id/floatingActionButton3"
                app:fabSize="mini"
                android:layout_marginStart="25dp"
                android:layout_alignTop="@id/textView12"
                android:layout_toEndOf="@+id/textView12"/>
        <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView13"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/sort_tip"
                android:textColor="@color/black"
                android:textSize="14sp" android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView12"/>

        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:tint="@color/white"
                android:layout_height="wrap_content" app:srcCompat="@drawable/folder_icon"
                android:id="@+id/floatingActionButton4"
                app:fabSize="mini"
                android:layout_alignTop="@+id/textView13" android:layout_alignStart="@+id/floatingActionButton3"/>

        <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView14"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/copy_tip"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@+id/textView13" android:layout_alignStart="@+id/textView13"/>
        <LinearLayout
                android:layout_alignTop="@+id/textView14" android:layout_alignStart="@+id/floatingActionButton3"
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="40dp" android:id="@+id/linearLayout4">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_login"
                    android:id="@+id/imageView18"
                    android:layout_weight="1"/>
            <ImageView
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_key" android:id="@+id/imageView19"
                    android:layout_weight="1"/>
        </LinearLayout>
        <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView16"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/delete_tip"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@+id/textView14" android:layout_alignStart="@+id/textView14"/>
    </RelativeLayout>


</RelativeLayout>
